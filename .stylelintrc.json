{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-prettier"
    ],
    "ignoreFiles": [
        "**/*.js",
        "**/*.min.*",
        "**/node_modules/**",
        "**/deleting/**",
        "**/jquery*/**",
        "**/META-INF/**",
        "**/WEB-INF/**",
        "**/*webpack*.json",
        "**/ezwp/**",
        "**/*.map.*",
        "**/*.json",
        "**/tiny-tools-toggle-switch/**"
    ],
    "rules": {
        "indentation": [
            4,
            {
                "indentInsideParens": "once-at-root-twice-in-block",
                "indentClosingBrace": false,
                "severity": "warning"
            }
        ],
        "max-empty-lines": [
            2,
            {
                "severity": "warning"
            }
        ],
        "max-line-length": [
            120,
            {
                "severity": "warning"
            }
        ],
        "comment-whitespace-inside": [
            "always",
            {
                "severity": "error"
            }
        ],
        "rule-empty-line-before": [
            "always-multi-line",
            {
                "severity": "error"
            }
        ],
        "import-notation": [
            "url",
            {
                "severity": "error"
            }
        ],
        "value-keyword-case": [
            "lower",
            {
                "severity": "warning"
            }
        ],
        "selector-type-case":  [
            "lower",
            {
                "severity": "warning"
            }
        ],
        "selector-pseudo-element-colon-notation":  [
            "double",
            {
                "severity": "error"
            }
        ],
        "selector-max-universal":  [
            1,
            {
                "severity": "error"
            }
        ],
        "declaration-block-single-line-max-declarations":  [
            1,
            {
                "severity": "warning"
            }
        ],
        "no-descending-specificity": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-duplicate-selectors": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-duplicate-at-import-rules": [
            true,
            {
                "severity": "error"
            }
        ],
        "keyframe-block-no-duplicate-selectors": [
            true,
            {
                "severity": "error"
            }
        ],
        "declaration-block-no-duplicate-custom-properties": [
            true,
            {
                "severity": "warning"
            }
        ],
        "declaration-block-no-duplicate-properties": [
            true,
            {
                "severity": "warning"
            }
        ],
        "font-family-no-duplicate-names": [
            true,
            {
                "severity": "warning"
            }
        ],
        "function-name-case": [
            "lower",
            {
                "severity": "warning"
            }
        ],
        "function-url-quotes": [
            "always",
            {
                "severity": "warning"
            }
        ],
        "function-comma-space-after": [
            "always",
            {
                "severity": "warning"
            }
        ],
        "function-parentheses-space-inside": [
            "never",
            {
                "severity": "warning"
            }
        ],
        "function-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "function-calc-no-unspaced-operator": [
            true,
            {
                "severity": "warning"
            }
        ],
        "block-no-empty": [
            true,
            {
                "severity": "error"
            }
        ],
        "string-no-newline": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-invalid-position-at-import-rule": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-invalid-double-slash-comments": [
            true,
            {
                "severity": "error"
            }
        ],
        "media-feature-name-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-unknown-animations": [
            true,
            {
                "severity": "error"
            }
        ],
        "property-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "selector-type-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "no-irregular-whitespace": [
            true,
            {
                "severity": "error"
            }
        ],
        "unit-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "custom-property-no-missing-var-function": [
            true,
            {
                "severity": "error"
            }
        ],
        "function-linear-gradient-no-nonstandard-direction": [
            true,
            {
                "severity": "error"
            }
        ],
        "declaration-block-no-shorthand-property-overrides": [
            true,
            {
                "severity": "error"
            }
        ],
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "selector-pseudo-element-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "at-rule-no-unknown":[
            true,
            {
                "severity": "warning"
            }
        ],
        "annotation-no-unknown": [
            true,
            {
                "severity": "error"
            }
        ],
        "declaration-no-important": [
            true,
            {
                "severity": "warning"
            }
        ],
        "value-no-vendor-prefix": [
            "true",
            {
                "severity": "warning"
            }
        ],
        "comment-empty-line-before": [
            "never",
            {
                "severity": "none"
            }
        ],
        "font-family-name-quotes": [
            "always-where-recommended",
            {
                "severity": "warning"
            }
        ],
        "color-named": [
            false,
            {
                "severity": "warning"
            }
        ],
        "color-function-notation": [
            "modern",
            {
                "severity": "warning"
            }
        ],
        "color-hex-case": [
            "lowercase",
            {
                "severity": "warning"
            }
        ],
        "color-hex-length": [
            "long",
            {
                "severity": "warning"
            }
        ]
    }
}
